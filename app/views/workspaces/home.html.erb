<h1>Home</h1>

<h1>Search for Workspace</h1>

<%= form_with url: search_workspaces_path, method: :post do |form|%>
<%= form.search_field :title_search, oninput: "this.form.requestSubmit()"%>
<% end %>
<div id="search_results">
  Search Results 
</div>

<%= link_to "New workspace", new_workspace_path, style: "color: red" %>

<div id="workspaces">
  <% @workspaces.each do |workspace| %>
   
    <p>
      <%= link_to (workspace.subjects.present? ? workspace.subjects : "Untitled Workspace"), workspace_path(workspace) %>
    </p>
  <% end %>
</div>